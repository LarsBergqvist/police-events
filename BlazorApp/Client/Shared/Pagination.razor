<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(CurrentPage > 1 ? "" : "disabled")"
            @onclick="() => GetPage.InvokeAsync(CurrentPage-1)">
            <a class="page-link" href="#">&laquo;</a>
        </li>
        <li class="page-item @(CurrentPage > 1 ? "" : "disabled")"
            @onclick="() => GetPage.InvokeAsync(1)">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item page-link bg-primary text-white">@CurrentPage</li>
        <li class="page-item @(CurrentPage < TotalPages ? "" : "disabled")"
            @onclick="() => GetPage.InvokeAsync(TotalPages)">
            <a class="page-link" href="#">@TotalPages</a>
        </li>
        <li class="page-item @(CurrentPage < TotalPages ? "" : "disabled")"
            @onclick="() => GetPage.InvokeAsync(CurrentPage + 1)">
            <a class="page-link" href="#">&raquo;</a>
        </li>
    </ul>
</nav>


@code {
    [Parameter]
    public long TotalPages { get; set; }

    [Parameter]
    public long CurrentPage { get; set; }

    [Parameter]
    public EventCallback<long> GetPage { get; set; }
}
